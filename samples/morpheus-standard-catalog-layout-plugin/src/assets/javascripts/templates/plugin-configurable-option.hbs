		{{#if isCodeEditor }}
			<textarea data-format="{{codeFormat}}" id="{{code}}" class="form-control input-sm spud-formatted-editor" name="{{name}}" placeholder="{{placeHolder}}" data-visible-on="{{visibleOnCode}}" data-required-on="{{requiredOnCode}}" {{#if excludeFromSearch}}exclude-search="true"{{/if}}>{{value}}</textarea>
		{{/if}}
		{{#if isTextarea }}
			<textarea id="{{code}}" class="form-control input-sm {{fieldClass}}" name="{{name}}" placeholder="{{placeHolder}}" data-visible-on="{{visibleOnCode}}" data-required-on="{{requiredOnCode}}" {{#if excludeFromSearch}}exclude-search="true"{{/if}}>{{value}}</textarea>
		{{/if}}
		{{#if isTypeahead}}
			<input type="text" class="typeahead form-control input-sm {{fieldClass}}" name="{{name}}" placeholder="{{placeHolder}}" value={{value}} data-depends-on-code="{{dependsOnCode}}" data-depends-on-value="{{dependsOnValue}}" data-visible-on="{{visibleOnCode}}" data-required-on="{{requiredOnCode}}" {{#if excludeFromSearch}}exclude-search="true"{{/if}}/>
		{{/if}}
		{{#if isInstanceWiz}}
			<button class="configure-instance">{{i18n "gomorpheus.label.configure"}}</button>
			{{#if configEditable}}
				<textarea data-format="{{codeFormat}}" id="{{code}}" class="form-control input-sm spud-formatted-editor" name="{{name}}" placeholder="{{placeHolder}}" data-visible-on="{{visibleOnCode}}" data-required-on="{{requiredOnCode}}" {{#if excludeFromSearch}}exclude-search="true"{{/if}}>{{value}}</textarea>
			{{else}}
				<input type="hidden" name="{{name}}" value="{{value}}" {{#if excludeFromSearch}}exclude-search="true"{{/if}}/>
			{{/if}}
		{{/if}}
		{{#if isAppWiz}}
			<button class="configure-app">{{i18n "gomorpheus.label.configure"}}</button>
			{{#if configEditable}}
			<textarea data-format="{{codeFormat}}" id="{{code}}" class="form-control input-sm spud-formatted-editor" name="{{name}}" placeholder="{{placeHolder}}" data-visible-on="{{visibleOnCode}}" data-required-on="{{requiredOnCode}}" {{#if excludeFromSearch}}exclude-search="true"{{/if}}>{{value}}</textarea>
			{{else}}
				<input type="hidden" name="{{name}}" value="{{value}}" {{#if excludeFromSearch}}exclude-search="true"{{/if}}/>
			{{/if}}
		{{/if}}
		{{#if isLogo}}
			<div class="icon-picker" data-name={{name}} data-context="{{context}}" data-icon-path="{{value}}" {{#if excludeFromSearch}}exclude-search="true"{{/if}}></div>
			<label class="file-label catalog-logo" uploadtxt="{{i18n 'gomorpheus.action.uploadPhoto'}}" style="display:none;">
			<input type="file" class="form-control icon-picker-file" name="{{name}}" data-preview disabled="disabled" {{#if excludeFromSearch}}exclude-search="true"{{/if}}/>
			<span class="file-name" style="display:none;"></span>
			</label>
		{{/if}}
		{{#if isCustomElement}}
			<div>
		{{{customElement}}}
		</div>
		{{/if}}
		{{#if helpBlock}}
		<div class="help-block" block-text="">{{{helpBlock}}}</div>
		{{/if}}
		<div class="help-block error-block" error-for="{{errorName}}"></div>
	</div>
</div>
