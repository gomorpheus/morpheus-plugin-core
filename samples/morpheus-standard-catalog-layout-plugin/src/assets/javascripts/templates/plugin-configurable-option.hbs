				<div class="option-tile-container {{fieldClass}}" data-name="{{name}}" data-value="{{value}}" data-no-blank="{{noBlank}}" data-option-type-id="{{id}}" 
					data-code="{{code}}" data-default-value="{{defaultValue}}" data-visible-on="{{visibleOnCode}}" data-depends-on-code="{{dependsOnCode}}" 
					data-option-source="{{optionSource}}" data-option-source-type="{{optionSourceType}}" config="{{configStr}}"
					data-required-on="{{requiredOnCode}}" data-depends-on-value="{{dependsOnValue}}" data-required="{{required}}"
