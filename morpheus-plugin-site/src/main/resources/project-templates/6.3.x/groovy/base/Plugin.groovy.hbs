package {{basePackage}}

import com.morpheusdata.core.Plugin


class {{pluginNameCamel}}Plugin extends Plugin {

    @Override
    String getCode() {
        return '{{pluginCode}}'
    }

    @Override
    void initialize() {
        this.setName("{{pluginName}}")
        {{#if dns}}
		this.registerProvider(new {{pluginNameCamel}}DNSProvider(this,this.morpheus))
        {{/if}}
        {{#if ipam}}
        this.registerProvider(new {{pluginNameCamel}}IPAMProvider(this,this.morpheus))
        {{/if}}
        {{#if instanceTab}}
        this.registerProvider(new {{pluginNameCamel}}InstanceTabProvider(this,this.morpheus))
        {{/if}}
        {{#if serverTab}}
        this.registerProvider(new {{pluginNameCamel}}ServerTabProvider(this,this.morpheus))
        {{/if}}
        {{#if report}}
        this.registerProvider(new {{pluginNameCamel}}ReportProvider(this,this.morpheus))
        {{/if}}
		{{#if loadBalancer}}
		this.registerProvider(new {{pluginNameCamel}}LoadBalancerProvider(this,this.morpheus))
		{{/if}}
        {{#if storageBucket}}
        this.registerProvider(new {{pluginNameCamel}}StorageBucketProvider(this,this.morpheus))
        {{/if}}
        {{#if cypher}}
        this.registerProvider(new {{pluginNameCamel}}CypherProvider(this,this.morpheus))
        {{/if}}
        {{#if credential}}
        this.registerProvider(new {{pluginNameCamel}}CredentialProvider(this,this.morpheus))
        {{/if}}
}

/**
* Called when a plugin is being removed from the plugin manager (aka Uninstalled)
     */
    @Override
    void onDestroy() {
        //nothing to do for now
    }
}
